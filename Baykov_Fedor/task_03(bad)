somedata <- iris
fun <- function(row_s, col_s) {
    if (is.numeric(somedata[row_s, col_s]) == "TRUE") {
      sum(data[row_s, col_s]);
      } else {
      freq <- table(somedata[row_s, col_s]);
      }
   }

lapply (somedata, fun(48:53, 5))
fun(data, 23:38, 4)
fun(data, 51:70, 1)
lapply (data, fun(10, "Petal.Width"))
fun(data, 147:200, "Petal.Width")
fun(data, 10:20, 3:5)
